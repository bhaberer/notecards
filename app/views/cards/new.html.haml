%h1 New card

= form_for @card, :url => new_user_card_path(current_user.username) do |f|
  -if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :entry
    = f.text_area :entry
  .actions
    = f.submit 'Save'
