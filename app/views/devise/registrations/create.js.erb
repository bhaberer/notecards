if (<%= resource.valid? %>) { 
  $('#devise_registration').slideUp();
  window.location.reload();
} else {
  $('#devise_registration').slideUp();
  $('#devise_registration .form').replaceWith("<%= escape_javascript(render :partial => 'form') %>");
  $('#devise_registration').slideDown(function() { 
    moveErrors();
    deviseAjax();
  });
}
