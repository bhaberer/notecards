.form
  = form_for(resource, 
             :as => resource_name, 
             :url => registration_path(resource_name)) do |f| 
    = devise_error_messages!
    .field
      = f.text_field :username
      %span Username
    .field  
      = f.email_field :email
      %span Email Address
    .field 
      = f.password_field :password
      %span Password
    .field
      = f.password_field :password_confirmation
      %span Confirm Password
    = f.submit "Sign up", :class => 'submit' 

