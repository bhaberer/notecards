.devise 
  .form
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .field
        = f.text_field :username
        = f.label :username
      .field
        = f.password_field :password
        = f.label :password
      = f.submit "Login", :class => 'submit'
      .checkbox
        = f.check_box :remember_me
        = f.label :remember_me
