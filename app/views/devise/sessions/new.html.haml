.form
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .field
      = f.text_field :username
      %span Username
    .field
      = f.password_field :password
      %span Password
    = f.submit "Login", :class => 'submit'
    .checkbox
      = f.check_box :remember_me
      = f.label :remember_me
