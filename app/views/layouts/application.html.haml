%html{:xmlns => 'http://www.w3.org/1999/xhtml'}
  %head
    %title Notecards
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header 365Cards
    - if notice || alert
      .notice
        = notice
        = alert
    %nav
      %ul 
        - if user_signed_in?
          %li Signed in as #{current_user.username}. Not you? #{link_to "Sign out", logout_path}
          %li= link_to "Today's Card", root_path
          %li= link_to "Profile", profile_path(current_user.username)
          %li= link_to "Account Info", '#'
        - else
          %li= link_to "Sign up", signup_path, :rel => 'facebox'
          %li= link_to "Sign in", login_path, :rel => 'facebox'
      
    .content= yield
    %footer
