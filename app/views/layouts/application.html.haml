%html{:xmlns => 'http://www.w3.org/1999/xhtml'}
  %head
    %title Notecards
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header 365Cards
    - if notice || alert
      .notice
        = notice
        = alert
    %nav{:id => user_signed_in? ? 'user' : 'signin'} 
      - if user_signed_in?
        .user
          .image{ :style => "background-image: url(#{current_user.gravatar});" }
          .info
            Signed in as #{current_user.username}.
            %br 
            Not you? #{link_to "Sign out", logout_path}
          .links 
            %ul
              %li= link_to "Today's Card", home_path
              %li= link_to "Profile", profile_path(current_user.username)
              %li= link_to "Account Info", '#'
      - else 
        #signin_form{ :style => 'display: none;' } 
          = render :partial => 'devise/sessions/form'
        #signin_link Click here to login
        %noscript= link_to "Sign in", login_path

    #main= yield
    %footer
      Created by &nbsp; 
      = link_to 'Brian Haberer', 'https://github.com/bhaberer', :target => '_blank'
      
