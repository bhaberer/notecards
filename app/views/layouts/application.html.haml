%html{:xmlns => 'http://www.w3.org/1999/xhtml'}
  %head
    %title Notecards
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      .notice= notice
      .alert= alert
      - if user_signed_in?
        Signed in as #{current_user.email}.
        Not you? #{link_to "Sign out", logout_path}
      - else
        #{link_to "Sign up", signup_path, :rel => 'facebox'} or
        #{link_to "sign in", login_path, :rel => 'facebox'}
    %nav
    .content= yield
    %footer
